{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID",
        "NEXTAUTH_SECRET",
        "VERCEL_URL"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build:ui": {
      "inputs": ["packages/ui/**/*"],
      "outputs": ["packages/ui/dist/**"]
    }
  }
}

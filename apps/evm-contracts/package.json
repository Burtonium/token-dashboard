{
  "name": "@bltzr-gg/realbet-evm-contracts",
  "description": "Realbet EVM contracts",
  "version": "0.0.2",
  "author": {
    "name": "bltzr-gg",
    "url": "https://github.com/bltzr-gg"
  },
  "main": "dist/exports.js",
  "scripts": {
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "lint": "pnpm run lint:sol && pnpm run lint:ts && pnpm run prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "build": "pnpm run clean && pnpm run compile && pnpm tsc && pnpm run lint",
    "deploy:sepolia": "pnpm run test && hardhat ignition deploy ignition/modules/TestStakingVault.ts --network sepolia",
    "verify:sepolia": "npx hardhat ignition verify chain-11155111",
    "list:sepolia": "npx hardhat ignition status chain-11155111",
    "deploy:local": "./scripts/deploy-local.sh"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ignition": "^0.15.6",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.7",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.3",
    "@nomicfoundation/ignition-core": "^0.15.5",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/merkle-tree": "^1.0.8",
    "@types/chai": "^4.3.17",
    "@types/chai-as-promised": "^7.1.8",
    "chai": "^4.5.0",
    "clean": "link:rimraf ./artifacts ./cache ./coverage ./types ./coverage.json",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "hardhat": "^2.22.9",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-chai-matchers-viem": "^2.0.8",
    "hardhat-docgen": "^1.1.1",
    "hardhat-gas-reporter": "^2.2.2",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "rimraf": "^5.0.10",
    "solc": "npm:solc@^0.8.4",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.7.16",
    "solidity-docgen": "^0.5.13",
    "solmate": "6.7.0",
    "surya": "^0.4.2",
    "typescript": "~5.0.4",
    "viem": "^2.21.35"
  }
}
